<Window x:Class="ClassDiagramGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassDiagramGenerator"
        mc:Ignorable="d"
        Title="Class Diagram Generator" Height="800" Width="1200"
        Background="#F5F5F5" FontFamily="Segoe UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Select Type or Assembly:" FontWeight="Bold"/>
                    <TextBox x:Name="TypeNameInput" Width="300" VerticalAlignment="Center" Padding="8"/>
                    <Button Content="Analyze Type" Click="AnalyzeType_Click" Background="#007ACC"/>
                    <Button Content="Browse Assembly" Click="BrowseAssembly_Click" Background="#107C10"/>
                    <Button Content="Clear" Click="Clear_Click" Background="#D83B01"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Output Format:"/>
                    <ComboBox x:Name="FormatCombo" Width="150" VerticalAlignment="Center">
                        <ComboBoxItem IsSelected="True">ASCII</ComboBoxItem>
                        <ComboBoxItem>PlantUML</ComboBoxItem>
                    </ComboBox>
                    <Button Content="Copy to Clipboard" Click="CopyToClipboard_Click" Background="#0078D4"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Type Browser -->
            <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="#E0E0E0" Background="White">
                <StackPanel>
                    <Label Content="Analyzed Types" FontWeight="Bold" Padding="10,10,10,5"/>
                    <ListBox x:Name="TypeList" Margin="10" ItemsSource="{Binding AnalyzedTypes}" 
                             MouseDoubleClick="TypeList_MouseDoubleClick" Background="White"/>
                </StackPanel>
            </Border>

            <!-- Right Panel - Diagram Display -->
            <TabControl Grid.Column="1" Background="#F5F5F5">
                <TabItem Header="Diagram View" Background="White">
                    <Grid Background="White">
                        <TextBox x:Name="DiagramOutput" 
                               IsReadOnly="True" 
                               FontFamily="Consolas" 
                               FontSize="11"
                               Margin="10"
                               Background="White"
                               Padding="10"
                               TextWrapping="NoWrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"/>
                    </Grid>
                </TabItem>
                <TabItem Header="PlantUML Code" Background="White">
                    <Grid Background="White">
                        <TextBox x:Name="PlantUmlOutput" 
                               IsReadOnly="True" 
                               FontFamily="Consolas" 
                               FontSize="11"
                               Margin="10"
                               Background="White"
                               Padding="10"
                               TextWrapping="NoWrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Information" Background="White">
                    <Grid Background="White">
                        <TextBox x:Name="InfoOutput" 
                               IsReadOnly="True" 
                               FontFamily="Segoe UI" 
                               FontSize="11"
                               Margin="10"
                               Background="White"
                               Padding="10"
                               TextWrapping="Wrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"/>
                    </Grid>
                </TabItem>
                <TabItem Header="PlantUML Preview" Background="White">
                    <Grid Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left: PlantUML Input -->
                        <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="#E0E0E0">
                            <DockPanel Margin="10">
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                                    <Label Content="PlantUML Code:" FontWeight="Bold"/>
                                    <Button Content="Preview" Click="PreviewPuml_Click" Background="#007ACC" Padding="10,5" Margin="10,0,0,0"/>
                                    <Button Content="Use Generated" Click="UseGenerated_Click" Background="#107C10" Padding="10,5" Margin="5,0,0,0"/>
                                </StackPanel>
                                <TextBox x:Name="PumlInput" 
                                       FontFamily="Consolas" 
                                       FontSize="11"
                                       Background="#1E1E1E"
                                       Foreground="#D4D4D4"
                                       Padding="10"
                                       TextWrapping="NoWrap"
                                       AcceptsReturn="True"
                                       AcceptsTab="True"
                                       VerticalScrollBarVisibility="Auto"
                                       HorizontalScrollBarVisibility="Auto"
                                       Text="@startuml&#x0a;class Example {&#x0a;  +name: String&#x0a;  +doSomething(): void&#x0a;}&#x0a;@enduml"/>
                            </DockPanel>
                        </Border>
                        
                        <!-- Right: Preview Image -->
                        <DockPanel Grid.Column="1" Margin="10">
                            <Label DockPanel.Dock="Top" Content="Preview:" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Image x:Name="PumlPreviewImage" Stretch="None"/>
                                </ScrollViewer>
                            </Border>
                        </DockPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
