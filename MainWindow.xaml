<Window x:Class="ClassDiagramGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassDiagramGenerator"
        mc:Ignorable="d"
        Title="Class Diagram Generator" Height="800" Width="1200"
        Background="#F5F5F5" FontFamily="Segoe UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Select Type or Assembly:" FontWeight="Bold"/>
                    <TextBox x:Name="TypeNameInput" Width="300" VerticalAlignment="Center" Padding="8"/>
                    <Button Content="Analyze Type" Click="AnalyzeType_Click" Background="#007ACC"/>
                    <Button Content="Browse Assembly" Click="BrowseAssembly_Click" Background="#107C10"/>
                    <Button Content="Clear" Click="Clear_Click" Background="#D83B01"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Output Format:"/>
                    <ComboBox x:Name="FormatCombo" Width="150" VerticalAlignment="Center">
                        <ComboBoxItem IsSelected="True">ASCII</ComboBoxItem>
                        <ComboBoxItem>PlantUML</ComboBoxItem>
                    </ComboBox>
                    <Button Content="Copy to Clipboard" Click="CopyToClipboard_Click" Background="#0078D4"/>
                    <Button Content="Save to File" Click="SaveToFile_Click" Background="#0078D4"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Type Browser -->
            <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="#E0E0E0" Background="White">
                <StackPanel>
                    <Label Content="Analyzed Types" FontWeight="Bold" Padding="10,10,10,5"/>
                    <ListBox x:Name="TypeList" Margin="10" ItemsSource="{Binding AnalyzedTypes}" 
                             MouseDoubleClick="TypeList_MouseDoubleClick" Background="White"/>
                </StackPanel>
            </Border>

            <!-- Right Panel - Diagram Display -->
            <TabControl Grid.Column="1" Background="#F5F5F5">
                <TabItem Header="Diagram View" Background="White">
                    <Grid Background="White">
                        <TextBox x:Name="DiagramOutput" 
                               IsReadOnly="True" 
                               FontFamily="Consolas" 
                               FontSize="11"
                               Margin="10"
                               Background="White"
                               Padding="10"
                               TextWrapping="NoWrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"/>
                    </Grid>
                </TabItem>
                <TabItem Header="PlantUML Code" Background="White">
                    <Grid Background="White">
                        <TextBox x:Name="PlantUmlOutput" 
                               IsReadOnly="True" 
                               FontFamily="Consolas" 
                               FontSize="11"
                               Margin="10"
                               Background="White"
                               Padding="10"
                               TextWrapping="NoWrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Information" Background="White">
                    <Grid Background="White">
                        <TextBox x:Name="InfoOutput" 
                               IsReadOnly="True" 
                               FontFamily="Segoe UI" 
                               FontSize="11"
                               Margin="10"
                               Background="White"
                               Padding="10"
                               TextWrapping="Wrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Relationships" Background="White">
                    <Grid Background="White">
                        <TextBox x:Name="RelationshipsOutput" 
                               IsReadOnly="True" 
                               FontFamily="Consolas" 
                               FontSize="11"
                               Margin="10"
                               Background="White"
                               Padding="10"
                               TextWrapping="Wrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               AcceptsReturn="True"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
